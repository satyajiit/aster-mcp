<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!--
        Allow cleartext (HTTP/WS) for all connections.
        Aster is a device controller that needs to connect to local network
        servers via WebSocket (ws://) and serve HTTP on LAN. Android's domain-config
        cannot match IP address ranges (192.168.x.x, 10.x.x.x, 100.x.x.x).
        The app itself warns about insecure connections and prefers wss:// / https://.
    -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>
